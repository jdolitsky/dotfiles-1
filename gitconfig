[user]
	email = pbrinkmann@mediatemple.net
	name = Paul Brinkmann
[color]
	diff = true
[alias]
    ci = commit
    cln = clean -fdx
    clonemt = !sh -c 'git clone "git@git.mtsvc.net:/${0}"'
    lol = log --oneline --graph --decorate
    st = status
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    unpushed = log --branches --not --remotes --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    undo = reset --hard HEAD~1
[core]
	excludesfile = ~/.gitignore
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
